                    on_press: root.answered(False)
                Button:
                    text: "Option 4"
                    pos_hint: {"center_x":.5, "center_y":.5}
                    on_press: root.answered(True)
                Button:
                    text: "Option 5"
                    pos_hint: {"center_x":.5, "center_y":.5}
                    on_press: root.answered(False)
                Button:
