<Label>:
    font_size: "20sp"
    font_name: 'Cour.ttf'

<QuizManager>
    Login:
        name: "login"
    Register:
        name: "new"
    Question1:
        name: "one"
    Question2:
        name: "two"
    Correct:
        name: "yes"
    Incorrect:
        name: "no"

<Login>
    BoxLayout:
        padding: "40dp"
        pos_hint: {"center_x":.5, "center_y":.5}
        size_hint: .7, .8
        orientation: "vertical"
        Label:
            id: invalid_txt
            color: 1,0,0,1
            text: ""
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            hint_text: "Password"
            password: True
        Button:
            text: "New Account"
            on_press: root.register()
        Button:
            text: "Log in"
            on_press: root.verify()

<Register>
    BoxLayout:
        padding: "40dp"
        pos_hint: {"center_x":.5, "center_y":.5}
        size_hint: .7, .8
        orientation: "vertical"
        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "<- Back"
                on_press: root.back()
            Label:
                id: invalid_txt
                color: 1,0,0,1
                text: ""
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: pass1
            hint_text: "Password"
            password: True
        TextInput:
            id: pass2
            hint_text: "Reenter Password"
            password: True
        Button:
            text: "Verify & Create"
            on_press: root.verify()

<Question1>
    BoxLayout:
        padding: "20dp"
        orientation: "vertical"
        spacing: 10
        RelativeLayout:
            Label:
                text: "Question"
                font_size: 40
            Label:
                text: 'What language is "こんにちは"?'
                font_size: 30
            Label:
                text: "Are you enjoying this?"
                font_size: 30
            Label:
                text: "What is the derivative of (x²+2ˣ)?"
                font_size: 30
            Label:
                text: "What is your favourite subject"
                font_size: 30
        RelativeLayout:
            pos_hint: {"center_x":.5, "center_y":.5}
            size_hint: .9,.7
            GridLayout:
                rows: 2
                spacing: 15
                Button:
                    text: "Option 1"
                    pos_hint: {"center_x":.5, "center_y":.5}
